{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "outDir": "./dist/",
    "rootDirs": [
      "./src/",
      "./tests/"
    ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
}