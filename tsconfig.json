{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["./dist"]
}